<%
/**
 * Server-side login endpoint
 * Uses the auth plugin to properly set the pb_auth cookie
 */

if (request.method !== 'post') {
  response.json(405, { error: 'Method not allowed' });
  return;
}

try {
  // Parse JSON body
  const data = request.body();
  const { email, password } = data;

  if (!email || !password) {
    response.json(400, { error: 'Email and password are required' });
    return;
  }

  // Use auth plugin's sign in method
  const authData = signInWithPassword(email, password);

  // Return success
  response.json(200, {
    success: true,
    user: {
      id: authData.record.id,
      email: authData.record.email
    }
  });

} catch (error) {
  response.json(401, {
    error: error.message || 'Authentication failed'
  });
}
%>