{
  "name": "csi.lk",
  "description": "Callum Silcock's personal website",
  "version": "2.0.0",
  "keywords": [
    "callum",
    "silcock",
    "portfolio"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "BUILDING": "---------------------------",
    "eleventy:default": "eleventy",
    "styles": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css --map",
    "scripts": "tsc && yarn rename:layouts",
    "watch": "yarn scripts && yarn eleventy:default",
    "build": "run-s clean styles scripts eleventy:default --print-label",
    "rename:layouts": "for f in src/_includes/layouts/*.js; do mv -- \"$f\" \"${f%.js}.11ty.js\"; done",
    "TESTING": "---------------------------",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:styles": "yarn stylelint src/**/*.css",
    "RUNNING": "---------------------------",
    "serve": "light-server -c .lightserverrc",
    "eleventy:watch": "eleventy --watch",
    "UTILITY": "---------------------------",
    "nuke": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean": "rm -rf dist && rm -rf src/_includes",
    "dev": "npm-run-all clean styles scripts eleventy:default --parallel serve --print-label"
  },
  "repository": {
    "type": "git",
    "url": "git+https://csi-lk@github.com/csi-lk/csi.lk.git"
  },
  "author": "Callum Silcock <github@csi.lk> (https://csi.lk)",
  "bugs": {
    "url": "https://github.com/csi-lk/csi.lk/issues"
  },
  "homepage": "https://github.com/csi-lk/csi.lk#readme",
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "light-server": "2.6.4",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "autoprefixer": "^9.7.6",
    "common-tags": "^1.8.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "npm-run-all": "^4.1.5",
    "postcss-calc": "^7.0.2",
    "postcss-cli": "^7.1.0",
    "postcss-css-variables": "^0.14.0",
    "postcss-nested": "^4.2.1",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-scss": "^2.0.0",
    "shx": "^0.3.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12.13.0"
  }
}
