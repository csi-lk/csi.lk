{
  "name": "csi.lk",
  "description": "Callum Silcock's personal website",
  "version": "2.3.3",
  "keywords": [
    "callum",
    "silcock",
    "portfolio"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "BUILDING": "---------------------------",
    "static": "eleventy",
    "static:prod": "eleventy --pathprefix=\"/\"",
    "styles": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css --map",
    "styles:prod": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css",
    "scripts": "yarn tsc && yarn scripts:rename",
    "scripts:rename": "ts-node ./scripts/rename-layouts.ts",
    "generate:books": "ts-node ./scripts/generate-bookshelf.ts",
    "images": "ts-node ./scripts/find-and-copy-images.ts",
    "build": "run-s clean generate:books styles scripts static images --print-label",
    "build:prod": "cross-env NODE_ENV=production run-s clean generate:books styles:prod scripts static:prod",
    "TESTING": "---------------------------",
    "test": "jest",
    "lint": "npm-run-all lint:stylelint lint:eslint",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint:eslint": "eslint --ext tsx,ts,js,ts,json . --ignore-path .gitignore",
    "lint:commit": "commitlint --from HEAD~$(git rev-list --count HEAD ^master)",
    "cypress:open": "cypress open",
    "e2e": "start-server-and-test start http://localhost:3000 e2e:local",
    "e2e:local": "cypress run --config baseUrl=http://localhost:3000",
    "e2e:prod": "cypress run --config baseUrl=https://csi.lk",
    "RUNNING": "---------------------------",
    "serve": "serve dist",
    "watch": "run-s scripts static",
    "UTILITY": "---------------------------",
    "ci:version": "standard-version && git push --follow-tags origin master",
    "nuke": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean": "rm -rf dist && rm -rf src/_includes",
    "dev": "npm-run-all clean generate:books styles scripts static images --parallel serve --print-label",
    "start": "yarn dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://csi-lk@github.com/csi-lk/csi.lk.git"
  },
  "author": "Callum Silcock <github@csi.lk> (https://csi.lk)",
  "bugs": {
    "url": "https://github.com/csi-lk/csi.lk/issues"
  },
  "homepage": "https://github.com/csi-lk/csi.lk#readme",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@babel/plugin-transform-typescript": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/common-tags": "^1.8.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^8.34.1",
    "add": "^2.0.6",
    "babel-jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.0",
    "enzyme-adapter-react-16": "^1.15.8",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-local-rules": "3.0.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "fast-glob": "^3.3.3",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "markdown-it-external-links": "^0.0.6",
    "prettier": "^3.5.3",
    "rss-parser": "^3.13.0",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^2.0.12",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^35.0.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "autoprefixer": "^10.4.21",
    "common-tags": "^1.8.2",
    "cssnano": "^7.0.7",
    "cssnano-preset-advanced": "^7.0.7",
    "faker": "5.5.3",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-highlightjs": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-calc": "^10.1.1",
    "postcss-cli": "^11.0.1",
    "postcss-css-variables": "^0.19.0",
    "postcss-nested": "^7.0.2",
    "postcss-nested-ancestors": "^3.0.0",
    "postcss-scss": "^4.0.9",
    "serve": "^14.2.4",
    "shx": "^0.4.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=17.0.1"
  },
  "packageManager": "yarn@3.5.0"
}
