{
  "name": "csi.lk",
  "description": "Callum Silcock's personal website",
  "version": "2.3.3",
  "keywords": [
    "callum",
    "silcock",
    "portfolio"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "BUILDING": "---------------------------",
    "static": "eleventy",
    "static:prod": "eleventy --pathprefix=\"/\"",
    "styles": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css --map",
    "styles:prod": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css",
    "scripts": "yarn tsc && yarn scripts:rename",
    "scripts:rename": "for f in src/_includes/layouts/**/*.js; do mv -- \"$f\" \"${f%.js}.11ty.js\"; done",
    "build": "run-s clean styles scripts static --print-label",
    "build:prod": "cross-env NODE_ENV=production run-s clean styles:prod scripts static:prod",
    "TESTING": "---------------------------",
    "test": "jest",
    "lint": "npm-run-all lint:stylelint lint:eslint",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint:eslint": "eslint --ext tsx,ts,js,ts,json . --ignore-path .gitignore",
    "lint:commit": "commitlint --from HEAD~$(git rev-list --count HEAD ^master)",
    "RUNNING": "---------------------------",
    "serve": "light-server -c .lightserverrc",
    "watch": "run-s scripts static",
    "UTILITY": "---------------------------",
    "ci:version": "standard-version && git push --follow-tags origin master",
    "nuke": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean": "rm -rf dist && rm -rf src/_includes",
    "dev": "npm-run-all clean styles scripts static --parallel serve --print-label"
  },
  "repository": {
    "type": "git",
    "url": "git+https://csi-lk@github.com/csi-lk/csi.lk.git"
  },
  "author": "Callum Silcock <github@csi.lk> (https://csi.lk)",
  "bugs": {
    "url": "https://github.com/csi-lk/csi.lk/issues"
  },
  "homepage": "https://github.com/csi-lk/csi.lk#readme",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/common-tags": "^1.8.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "add": "^2.0.6",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.3",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "jest": "^26.6.3",
    "light-server": "2.9.1",
    "markdown-it-external-links": "^0.0.6",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^20.0.0",
    "yarn": "^1.22.10"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "autoprefixer": "^9.8.6",
    "common-tags": "^1.8.0",
    "cssnano": "^4.1.11",
    "cssnano-preset-advanced": "^4.0.8",
    "faker": "^5.5.3",
    "markdown-it-highlightjs": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "postcss-calc": "^7.0.5",
    "postcss-cli": "^8.3.1",
    "postcss-css-variables": "^0.17.0",
    "postcss-nested": "^4.2.3",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-scss": "^3.0.5",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12.13.0"
  }
}
