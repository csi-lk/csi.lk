{
  "name": "csi.lk",
  "description": "Callum Silcock's personal website",
  "version": "2.3.3",
  "keywords": [
    "callum",
    "silcock",
    "portfolio"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "BUILDING": "---------------------------",
    "static": "eleventy",
    "static:prod": "eleventy --pathprefix=\"/\"",
    "styles": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css --map",
    "styles:prod": "shx cat 'src/**/*.css' | postcss -o dist/styles/index.css",
    "scripts": "yarn tsc && yarn scripts:rename",
    "scripts:rename": "ts-node ./scripts/rename-layouts.ts",
    "generate:books": "ts-node ./scripts/generate-bookshelf.ts",
    "build": "run-s clean generate:books styles scripts static --print-label",
    "build:prod": "cross-env NODE_ENV=production run-s clean generate:books styles:prod scripts static:prod",
    "TESTING": "---------------------------",
    "test": "jest",
    "test:visual": "yarn build && start-server-and-test serve http://localhost:8080 test:percy",
    "test:percy": "percy snapshot snapshots.yml",
    "lint": "npm-run-all lint:stylelint lint:eslint",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint:eslint": "eslint --ext tsx,ts,js,ts,json . --ignore-path .gitignore",
    "lint:commit": "commitlint --from HEAD~$(git rev-list --count HEAD ^master)",
    "RUNNING": "---------------------------",
    "serve": "serve dist",
    "watch": "run-s scripts static",
    "UTILITY": "---------------------------",
    "ci:version": "standard-version && git push --follow-tags origin master",
    "nuke": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean": "rm -rf dist && rm -rf src/_includes",
    "dev": "npm-run-all clean generate:books styles scripts static --parallel serve --print-label",
    "start": "yarn dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://csi-lk@github.com/csi-lk/csi.lk.git"
  },
  "author": "Callum Silcock <github@csi.lk> (https://csi.lk)",
  "bugs": {
    "url": "https://github.com/csi-lk/csi.lk/issues"
  },
  "homepage": "https://github.com/csi-lk/csi.lk#readme",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.18.0",
    "add": "^2.0.6",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-local-rules": "^1.1.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "fast-glob": "^3.2.11",
    "jest": "^27.5.1",
    "markdown-it-external-links": "^0.0.6",
    "prettier": "^2.6.2",
    "rss-parser": "^3.12.0",
    "standard-version": "^9.3.2",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.6.1",
    "stylelint-config-standard": "^25.0.0",
    "ts-node": "^10.7.0",
    "yarn": "^1.22.18"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "autoprefixer": "^10.4.4",
    "common-tags": "^1.8.2",
    "cssnano": "^5.1.7",
    "cssnano-preset-advanced": "^5.3.3",
    "faker": "5.5.3",
    "markdown-it": "^12.3.2",
    "markdown-it-highlightjs": "^3.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-calc": "^8.2.4",
    "postcss-cli": "^9.1.0",
    "postcss-css-variables": "^0.18.0",
    "postcss-nested": "^5.0.6",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-scss": "^4.0.3",
    "serve": "^13.0.2",
    "shx": "^0.3.4",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=17.0.1"
  },
  "packageManager": "yarn@3.2.0"
}
