{
  "name": "csi.lk",
  "description": "Callum Silcock's personal website",
  "version": "2.0.0",
  "keywords": [
    "callum",
    "silcock",
    "portfolio"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "BUILDING": "---------------------------",
    "eleventy:default": "eleventy",
    "styles:prod": "node-sass src/styles/ --output dist/styles/ && postcss ./dist/styles/*.css --replace",
    "styles:dev": "node-sass src/styles/ --output dist/styles/ --source-map true --source-map-contents true && postcss ./dist/styles/*.css --replace",
    "scripts": "tsc && yarn rename:layouts",
    "watch": "yarn scripts && yarn eleventy:default",
    "build": "run-s clean styles:prod scripts eleventy:default --print-label",
    "rename:layouts": "for f in src/_includes/layouts/*.js; do mv -- \"$f\" \"${f%.js}.11ty.js\"; done",
    "TESTING": "---------------------------",
    "test": "echo \"Error: no test specified\" && exit 1",
    "RUNNING": "---------------------------",
    "serve": "light-server -c .lightserverrc",
    "eleventy:watch": "eleventy --watch",
    "UTILITY": "---------------------------",
    "nuke": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean": "rm -rf dist && rm -rf src/_includes",
    "dev": "npm-run-all clean styles:dev scripts eleventy:default --parallel serve --print-label"
  },
  "repository": {
    "type": "git",
    "url": "git+https://csi-lk@github.com/csi-lk/csi.lk.git"
  },
  "author": "Callum Silcock <github@csi.lk> (https://csi.lk)",
  "bugs": {
    "url": "https://github.com/csi-lk/csi.lk/issues"
  },
  "homepage": "https://github.com/csi-lk/csi.lk#readme",
  "devDependencies": {
    "@types/common-tags": "^1.8.0",
    "light-server": "2.6.4",
    "prettier": "^2.0.4"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "autoprefixer": "^9.6.5",
    "babel-loader": "^8.0.6",
    "common-tags": "^1.8.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12.13.0"
  }
}
