{
  "compilerOptions": {
    "outDir": "src/_includes/",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react", // use the React mode, so call the factory
    "jsxFactory": "Silk.createElement" // The name of the factory function
  },
  "include": ["src/types/*.d.ts", "src/components/**/*", "src/layouts/**/*"]
}
